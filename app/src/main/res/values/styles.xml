<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentToolbar" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="titleTextColor">#01FFFFFF</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AccentButton" parent="ButtonTheme">
        <item name="android:textColor">@color/text_color_for_colored_background</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    
    <style name="RestaurantName.Dark" parent="AppTheme">
        <item name="android:textSize">@dimen/restaurant_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RestaurantName.Light" parent="AppTheme">
        <item name="android:textSize">@dimen/restaurant_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_for_colored_background</item>
    </style>

    <style name="RestaurantAddress" parent="AppTheme">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="DishName.Dark" parent="AppTheme">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="ActivityContentTitle" parent="RestaurantName.Dark">
        <item name="android:textColor">@color/default_text</item>
    </style>
</resources>
